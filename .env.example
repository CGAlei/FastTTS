# FastTTS Environment Configuration Template
# Copy this file to .env and configure your settings

# ================================================
# TTS ENGINE API KEYS (Optional)
# ================================================

# MiniMax TTS Engine (Premium, High Quality)
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_GROUP_ID=your_minimax_group_id_here
MINIMAX_CUSTOM_VOICE_ID=moss_audio_96a80421-22ea-11f0-92db-0e8893cbb430
MINIMAX_MODEL=speech-02-turbo

# OpenAI API (For AI Vocabulary Definitions)
OPENAI_API_KEY=your_openai_api_key_here

# ================================================
# FASTHTML APPLICATION SETTINGS
# ================================================

# Server Configuration
FASTTTS_HOST=127.0.0.1
FASTTTS_PORT=5001

# Default TTS Settings
FASTTTS_DEFAULT_VOICE=zh-CN-XiaoxiaoNeural
FASTTTS_DEFAULT_ENGINE=edge
FASTTTS_DEFAULT_TEXT=就像心里起的小波浪，是你突然想到的念头

# ================================================
# LOGGING AND DEBUG
# ================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR)
FASTTTS_LOG_LEVEL=INFO
FASTTTS_LOG_DIR=logs

# Debug Mode (true/false)
FASTTTS_DEBUG_MODE=false

# ================================================
# ADVANCED SETTINGS
# ================================================

# MiniMax Processing Settings
MINIMAX_CHUNK_SIZE=120

# File Paths (Usually auto-configured)
# FASTTTS_DATA_DIR=./data
# FASTTTS_SESSION_DIR=./sessions
# FASTTTS_DB_PATH=./db/vocab.db